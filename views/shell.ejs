<!DOCTYPE html>
<html ng-app="PyTest">
    <head>
        <meta charset="utf-8"/>
        <title>Test</title>
        <link rel="stylesheet" href="css/pytest.css"/>
        <script src="libs/angular.min.js"></script>
        <script src="socket.io/socket.io.js"></script>
        <script>
            "use strict";
            let defscript = "<%= defscript.replace(/\n/g,"\\n") %>";
        </script>
        <script src="js/pytest.js"></script>
    </head>
    <body>
    <div id="container" ng-controller="MainController">
        <div class="half-cont">
            <h3>Python script</h3>
            <textarea rows="30" style="width: 95%;" ng-model="scriptContent" ng-allow-tab>
            </textarea><br/>
            <button ng-click="runScript()">Run Script</button>
        </div>
        <div class="half-cont">
            <h3>Result</h3>
            <span>Input: </span>
            <input type="text" ng-model="scriptInput" ng-disabled="!scriptRunning"/>
            <button ng-click="sendInput()" ng-disabled="!scriptRunning">Send</button>
            <br/>
            <pre ng-bind-html="scriptResult | sanitize"></pre>
        </div>
    </div>
    </body>
</html>